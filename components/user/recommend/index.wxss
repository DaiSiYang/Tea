.text{
  display: block;
  height: 80rpx;
  line-height: 80rpx;
  padding-left: 30rpx;
  width: 100%;
  background-color: #fff;
  font-weight: 600;
}
.recommend{
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height: 500rpx;
  background-color: #fff;
}
.recommendItem{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin: 20rpx;
  width: 19.5%;
  height: 120rpx;

}
.ItemImage{
  width: 40rpx;
  height: 40rpx;

}
.ItemText{
  font-size: 25rpx;
  margin-top: 10rpx;
}