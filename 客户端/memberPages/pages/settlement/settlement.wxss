page {
  background: #f7f8fa;
  color: #333;
}

.settlement-container {
  padding: 24rpx 24rpx calc(140rpx + env(safe-area-inset-bottom));
  min-height: 100vh;
  box-sizing: border-box;
}

/* 地址卡片 */
.address-info {
  position: relative;
  background: #fff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.name-phone {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.address-detail {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 分割线 */
.divider {
  height: 1px;
  background: #4395ff;
  margin: 0;
  position: relative;
}

/* 商品列表 */
.goods-list {
  background: #fff;
  padding: 24rpx 32rpx;
  margin-top: 20rpx;
}

.goods-item {
  padding: 24rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.goods-item:last-child {
  border-bottom: none;
}

.goods-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.goods-spec {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.goods-price-wrap {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.goods-price {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  margin-right: 16rpx;
}

.goods-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.goods-count {
  font-size: 26rpx;
  color: #666;
}

/* 订单信息 */
.order-info {
  background: #fff;
  padding: 24rpx 32rpx;
  margin-top: 20rpx;
  margin-bottom: 120rpx;
}

.order-number {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f5f5f5;
}

.fee-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.fee-label {
  font-size: 28rpx;
  color: #666;
}

.fee-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.fee-value.highlight {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: 600;
}

/* 底部结算栏 */
.settlement-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.total-wrap {
  display: flex;
  align-items: baseline;
}

.total-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 8rpx;
}

.total-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff4d4f;
}

.total-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

.pay-btn {
  background: #494136;
  padding: 20rpx 48rpx;
  border-radius: 32rpx;
  color: #fff;
  font-size: 30rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 12rpx rgba(73, 65, 54, 0.2);
  transition: all 0.2s ease;
}

.pay-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(73, 65, 54, 0.2);
} 