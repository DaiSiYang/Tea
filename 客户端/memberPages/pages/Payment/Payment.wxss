page {
  background: #fff;
  min-height: 100vh;
}

.payment-container {
  padding: 0 32rpx;
}

/* 标题样式 */
.payment-title {
  font-size: 32rpx;
  color: #333;
  text-align: center;
  padding: 32rpx 0;
  font-weight: 500;
}

/* 支付金额区域 */
.amount-section {
  text-align: center;
  padding: 60rpx 0;
}

.amount-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.amount-value {
  font-size: 72rpx;
  font-weight: 500;
  color: #333;
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.currency {
  font-size: 40rpx;
  margin-right: 8rpx;
}

/* 倒计时区域 */
.countdown-wrap {
  text-align: center;
  margin: 40rpx 0;
}

.countdown-text {
  font-size: 26rpx;
  color: #666;
}

.countdown-time {
  color: #ff4d4f;
  margin: 0 4rpx;
}

.countdown-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 12rpx;
}

/* 支付按钮 */
.pay-button {
  background: #07c160;
  color: #fff;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  margin: 48rpx 0;
}

.pay-button:active {
  opacity: 0.9;
}

/* 订单信息 */
.order-info {
  margin-top: 60rpx;
}

.order-info-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 24rpx;
}

.order-info-item {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
} 