page {
  background: #f7f8fa;
  min-height: 100vh;
  display: flex;
}

/* 左侧分类导航 */
.sidebar {
  width: 180rpx;
  height: 100vh;
  background: #fff;
  box-shadow: 2rpx 0 12rpx rgba(0, 0, 0, 0.05);
  position: fixed;
  left: 0;
  top: 0;
  padding-top: 20rpx;
}

.sidebar-item {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.sidebar-item.active {
  color: #8b6b52;
  font-weight: 500;
  background: #f7f3f0;
}

.sidebar-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 36rpx;
  background: #8b6b52;
  border-radius: 0 4rpx 4rpx 0;
}

/* 右侧商品列表 */
.product-container {
  flex: 1;
  padding: 20rpx 24rpx;
  margin-left: 180rpx;
}

.product-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  padding: 24rpx;
}

.product-item {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.product-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.product-image {
  width: 100%;
  height: 320rpx;
  background: #f5f5f5;
  position: relative;
  overflow: hidden;
}

.product-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.product-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(139, 107, 82, 0.9);
  color: #fff;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(4px);
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  line-height: 1.4;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.product-bottom {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 12rpx;
}

.price-section {
  display: flex;
  flex-direction: column;
}

.product-price {
  color: #494136;
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1;
}

.product-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
  font-weight: normal;
}

.product-sales {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 60rpx 0;
  color: #999;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 26rpx;
} 