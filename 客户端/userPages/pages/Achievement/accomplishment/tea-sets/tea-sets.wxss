/* pages/accomplishment/tea-sets/tea-sets.wxss */
.container {
  padding: 30rpx;
  background-color: #f3f7f7;
  min-height: 100vh;
}

.header {
  text-align: center;
  padding: 60rpx 0;
  margin-bottom: 40rpx;
  position: relative;
}

.header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 3rpx;
  background: linear-gradient(90deg, transparent, #8B4513, transparent);
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #4a2f1d;
  letter-spacing: 6rpx;
  position: relative;
  display: inline-block;
}

.subtitle {
  font-size: 28rpx;
  color: #8B4513;
  margin-top: 16rpx;
  display: block;
  opacity: 0.8;
}

.tea-sets-list {
  padding: 20rpx;
}

.tea-set-item {
  background: #fff;
  margin-bottom: 40rpx;
  border-radius: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(139, 69, 19, 0.05);
  overflow: hidden;
  border: 1rpx solid rgba(139, 69, 19, 0.1);
  animation: fadeInUp 0.6s ease forwards;
}

.tea-set-image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.tea-set-info {
  padding: 30rpx;
}

.tea-set-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #4a2f1d;
  margin-bottom: 16rpx;
  display: block;
}

.tea-set-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: block;
}

.tea-set-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.tag {
  font-size: 24rpx;
  color: #8B4513;
  background: rgba(139, 69, 19, 0.1);
  padding: 8rpx 24rpx;
  border-radius: 100rpx;
}

.tea-set-details {
  display: flex;
  gap: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid rgba(139, 69, 19, 0.1);
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.detail-label {
  font-size: 24rpx;
  color: #999;
}

.detail-value {
  font-size: 28rpx;
  color: #4a2f1d;
  font-weight: 500;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.tea-set-item:nth-child(1) { animation-delay: 0.2s; }
.tea-set-item:nth-child(2) { animation-delay: 0.3s; }
.tea-set-item:nth-child(3) { animation-delay: 0.4s; }