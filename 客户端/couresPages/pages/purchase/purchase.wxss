page {
  background: #f7f8fa;
  min-height: 100vh;
}

.purchase-container {
  padding: 24rpx;
}

/* 课程信息卡片 */
.course-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.course-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.course-image {
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.course-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item {
  font-size: 26rpx;
  color: #666;
  margin-right: 32rpx;
  display: flex;
  align-items: center;
}

.info-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 价格区域 */
.price-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.price-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.price-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 0;
}

.price-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.price-item:not(:last-child)::after {
  content: '';
  position: absolute;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
  height: 24rpx;
  width: 1px;
  background: #eee;
}

.price-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.price-value {
  font-size: 28rpx;
  color: #494136;
  font-weight: 500;
}

.price-value::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 2rpx;
}

/* 购买须知 */
.notice-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 120rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.notice-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.notice-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 12rpx;
  padding-left: 24rpx;
  position: relative;
}

.notice-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 14rpx;
  width: 8rpx;
  height: 8rpx;
  background: #666;
  border-radius: 50%;
}

/* 底部购买栏 */
.purchase-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  padding: 20rpx 32rpx calc(20rpx + env(safe-area-inset-bottom));
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.button-group {
  display: flex;
  align-items: center;
  gap: 16rpx;  /* 按钮之间的间距 */
}

/* 统一按钮基础样式 */
.cart-btn,
.purchase-btn {
  width: 200rpx; /* 统一宽度 */
  height: 80rpx; /* 统一高度 */
  line-height: 80rpx; /* 文字垂直居中 */
  text-align: center;
  border-radius: 40rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 500;
  transition: all 0.2s ease;
}

.cart-btn {
  background: #a49a8d;
  box-shadow: 0 4rpx 12rpx rgba(164, 154, 141, 0.2);
}

.purchase-btn {
  background: #494136;
  box-shadow: 0 4rpx 12rpx rgba(73, 65, 54, 0.2);
}

.cart-btn:active,
.purchase-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.total-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #494136;
}

.total-price::before {
  content: '¥';
  font-size: 24rpx;
  margin-right: 4rpx;
} 