.free-container {
  padding: 30rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 搜索区域样式 */
.search-section {
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.search-box {
  display: flex;
  align-items: center;
  background: #fff;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.03);
}

.search-box icon {
  margin-right: 16rpx;
}

.search-box input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.placeholder {
  color: #999;
}

/* 课程列表样式 */
.course-list {
  padding: 10rpx;
}

.course-item {
  margin-bottom: 30rpx;
}

.course-card {
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.course-card:active {
  transform: scale(0.98);
}

.course-image {
  width: 100%;
  height: 320rpx;
  background-color: #f0f0f0;
}

.course-info {
  padding: 24rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2c3e50;
  margin-bottom: 16rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.course-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.course-date {
  font-size: 24rpx;
  color: #95a5a6;
}

.course-stats {
  display: flex;
  align-items: center;
}

.stat-item {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #7f8c8d;
  margin-left: 20rpx;
}

.stat-item icon {
  margin-right: 8rpx;
}

.course-desc {
  font-size: 26rpx;
  color: #7f8c8d;
  line-height: 1.6;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 卡片悬停效果 */
.course-card {
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.course-card:active {
  transform: scale(0.98) translateY(2rpx);
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
} 